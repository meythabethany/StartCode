<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="id.sch.smktelkom_mlg.www.startcode.ContentFragment.VideoFragment">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tool"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#03aca1"
        android:elevation="4dp"
        android:minHeight="?android:attr/actionBarSize">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:contentDescription="TODO"
            android:text="Video Tutorial"
            android:textAlignment="center"
            android:textColor="@color/colorwhite"
            android:textSize="20dp" />
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tool"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/youtube_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="20dp"
            android:visibility="visible" />

    </LinearLayout>

    <Button
        android:id="@+id/view"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="181dp"
        android:layout_marginStart="28dp"
        android:text="RecyclerView" />

    <Button
        android:id="@+id/conect"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/view"
        android:layout_marginEnd="23dp"
        android:text="ConnectTo internet" />

    <Button
        android:id="@+id/java"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_alignStart="@+id/conect"
        android:layout_alignTop="@+id/basis"
        android:text="JAVAFX" />

    <Button
        android:id="@+id/basis"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_alignStart="@+id/view"
        android:layout_marginTop="400dp"
        android:text="Basis Data" />

</RelativeLayout>
